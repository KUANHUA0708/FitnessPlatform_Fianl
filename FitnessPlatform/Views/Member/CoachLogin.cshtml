    <script>
        var CoachID = '@ViewBag.CoachID';
        var MemberID= '@ViewBag.MemberID';
        document.addEventListener('DOMContentLoaded', function () {
            var calendarEl = document.getElementById('calendar');
            var calendar = new FullCalendar.Calendar(calendarEl, {
                headerToolbar: {
                    left: 'prev,next today',
                    center: 'title',
                    right: 'dayGridMonth,timeGridWeek,timeGridDay,listMonth'
                },
                locale: 'zh-tw',
                eventStartEditable: false,
                //initialDate: '2020-09-01',
                navLinks: true, // can click day/week names to navigate views
                businessHours: true, // display business hours
                editable: true,
                selectable: true,
                displayEventEnd:true,
                eventDragStart: function () {
                return false;
                },
                eventResize: function (info) {
                alert(info.event.title + " end is now " + info.event.end.toISOString());

                    if (!confirm("is this okay?")) {
                        info.revert();
                    }
                },
                dateClick: function (info) {//新增
                    $('#CoachDialog').modal();
                    $('#deleteBtn').hide();
                    $('#eventid').val('');
                    $('#StartTime').val('');
                    $('#EndTime').val('');
                    $('#tDes').val('');
                    $("#block1").text('');
                    $("#block2").text('');
                    $("#block3").text('');
                    $('#send').unbind().click(function () {
                        if (!Verify()) {
                            return false;
                        }
                        $.ajax({
                            url: '@Href("~/Coach/UpdateOrder")',
                            dataType: 'text',
                            data: { 'StartTime': $('#StartTime').val(), 'EndTime': $('#EndTime').val(), 'eventid': $('#eventid').val(), 'coachid': CoachID, 'description': $('#tDes').val() },
                            success: function (data) {
                                if (data != "" ) {
                                    alert(data);
                                } else {
                                    swal("排休成功", "You have successfully scheduled vacation", "success");
                                    calendar.refetchEvents();
                                }
                            }
                        });
                    });

                },
                eventClick: function (info) { //修改
                     if (info.event.extendedProps.Type =='coach') {//教練
                        $('#CoachDialog').modal();
                        $('#deleteBtn').show();
                        $('#eventid').val(info.event.extendedProps.coachrestid);
                        $('#tDes').val(info.event.extendedProps.Description  );
                        $('#StartTime').val(info.event.extendedProps.StartDate);
                        $('#EndTime').val(info.event.extendedProps.EndDate);
                        $("#block1").text('');
                        $("#block2").text('');
                        $("#block3").text('');
                        $('#send').unbind().click(function () {
                            if (!Verify()) {
                                return false;
                            }
                              $.ajax({
                                url: '@Href("~/Coach/UpdateOrder")',
                                    dataType: 'text',
                                    data: { 'StartTime': $('#StartTime').val(), 'EndTime': $('#EndTime').val(), 'eventid': $('#eventid').val(), 'coachid': CoachID, 'description': $('#tDes').val() },
                                    success: function (data) {
                                    swal("修改成功", "You have modified successfully", "success");
                                    calendar.refetchEvents();
                                }
                              });
                        });

                        //刪除 傳送給前端
                        $('#deleteBtn').unbind().click(function () {
                             swal({
                                    title: "您確定刪除課程?",
                                    text:"Are you sure you want to delete the course?",
                                    icon: "warning",
                                    buttons: {
                                        Btn: false,
                                        cancel: {
                                            text: "取消",
                                            visible: true,
                                            value: "cancel"

                                        },
                                        danger: {
                                            text: "確定",
                                            visible: true,
                                            value: "sure"
                                        }
                                    }
                                }).then((value) => {
                                    switch (value) {
                                        case "cancel":
                                            swal("刪除失敗", "You failed to delete the class", "error");
                                            break;
                                        case "sure":
                                            swal("刪除成功", "You have successfully deleted the class", "success");
                                           $.ajax({
                                                url: '@Href("~/Coach/DeleteCourseRest")',
                                                dataType: 'text',
                                                async:false,
                                                data: {'id':info.event.extendedProps.coachrestid,'coachid':CoachID},
                                                success: function (data) {

                                                info.event.remove();
                                                }
                                               });
                                    }

                                });
                        });
                    }
                    else {//學員

                          $('#MemberDialog').modal();
                          $('#cMemberName').text(info.event.extendedProps.MemberName);
                          $('#cDescription').text(info.event.extendedProps.Description  );
                          $('#cGym').text(info.event.extendedProps.Gym);
                          $('#cStartDate').text(info.event.extendedProps.StartDate);
                          $('#cEndDate').text(info.event.extendedProps.EndDate);
                    }

                },
                eventTimeFormat: { // like '14:30:00'
                    hour: '2-digit',
                    minute: '2-digit',
                    hour12: false
                },
                eventContent: function (info) {
                    console.log(info.event.extendedProps);
                    if (info.event.extendedProps.Type == 'member') {
                        return {
                            html: info.timeText + '<br />'
                                + info.event.extendedProps.Gym
                        }
                    } else {
                        return {
                            html: info.timeText + '<br />'
                                + info.event.extendedProps.Description
                        }
                    }
                },
                events: function (info, successCallback, failureCallback) {
                      $.ajax({
                            url: '@Href("~/Canlendar/GetTbookData")',
                          dataType: 'json',
                            data: {'memberid':'-1','coachid':CoachID},
                            success: function (data) {
                                //console.log(data);
                                var eventArray = [];
                                $(data).each(function (index, item) {
                                    //console.log(item.start + "     " +  item.end)
                                    if (item.type == 'member') {
                                        var color = item.OrderStatus;
                                        if (item.OrderStatus == "0") {
                                            color = "beConfirmed";
                                        } else if (item.OrderStatus == "1") {
                                            color = "Confirm";
                                        }
                                          eventArray.push({
                                            "id": item.groupId,
                                            "title":item.GymName,
                                            "start":item.start  ,
                                            "end": item.end,
                                            "color": item.color,
                                            "StartDate": item.start,
                                            "EndDate": item.end,
                                            "Description": item.TrainingName,
                                            "Gym": item.GymName,
                                            "MemberName": item.membername,
                                            "className": color,
                                            "MyClassName": color,
                                            "Type": 'member'
                                        });
                                    } else if (item.type == 'coach') {
                                        eventArray.push({
                                            "id": item.coachid,
                                            "groupId": item.groupId,
                                            "coachrestid": item.coachrestid,
                                            "title":item.GymName,
                                            "start":item.start  ,
                                            "end": item.end,
                                            "color": item.color,
                                            "className": 'Coach',
                                            "StartDate": item.start,
                                            "EndDate": item.end,
                                            "Description": item.GymName,
                                            "Type": 'coach'
                                    });

                                    }
                                });

                                successCallback(eventArray);

                            }
                        });

               }
            });

            calendar.render();
        });



        function Verify() {
            if ($('#StartTime').val() == '') {
                $("#block1").text('請選擇起始日期');
                return false;
            }

            if ($('#EndTime').val() == '') {
                $("#block2").text('請選擇結束日期');
                return false;
            }

            if ($('#tDes').val() == '') {
                $("#block3").text('請輸入說明');
                return false;
            }

            if ($('#StartTime').val() > $('#EndTime').val()) {
                swal("起始日期須小於結束日期", "", "warning");
                return false;
            }
            return true;
        }

        //生健身房下拉式選單
        function SetGym() {
               $.ajax({
                        url: '@Href("~/Canlendar/GetGymName")',
                         dataType: 'json',
                         async:false,
                         success: function (data) {
                             $('#GymName').empty();
                             $('#GymName').append('<option value="">請選擇</option>');
                             $(data).each(function (index, item) {
                             $('#GymName').append('<option value="'+item.GymId+'">'+item.GymName+'</option>');
                              });
                        }
                        });
        }

            $(function () {
                LoadApplyCount();
            $('#StartTime').change(function () {
                var selectedIndex = $(this).prop('selectedIndex');
                if (selectedIndex == 23) { selectedIndex = -1;}
