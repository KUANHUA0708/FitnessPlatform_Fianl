                 "timeFormat": "HH:00",
                "hourText": "選擇時間",
                onSelect: function () {
                    $(this).next('span').text('');
                },
                beforeShow: function (input, inst) {

                    var position = $(this).position();
                    var top = position.top + 370;
                    var left = position.left + 650;
                         console.log(position);
                     setTimeout(function () {
                        inst.dpDiv.css({
                            top: position.top,
                            left: position.left +200
                        });
                    }, 0);
                }
              });

            $('#applydata').click(function () {
                window.location.href = "@Href("~/Coach/MemberCheck")" + "?coachid=" + @ViewBag.CoachID;
            });

        });

          function LoadApplyCount() {
            var second = 100;
            setInterval(function () {
                $.ajax({
                    url: '@Href("~/Canlendar/LoadApplyCount")',
                    data: {'coachid':CoachID},
                    dataType: 'text',
                    success: function (data) {
                      $('#applycount').text(data);
                        second = 3000;
                      }
                });

            }, second);

        }


    </script>

